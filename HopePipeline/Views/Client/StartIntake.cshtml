@model Client

@{
    ViewData["Title"] = "StartIntake";
}

<h2>Center for Children's Rights Intake Form</h2>

<h4>Client</h4>
<hr />

<form asp-action="StartIntake" method="post">
    <input type="hidden" asp-for="ClientID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
    </div>
</form>
<p>
    <div>
    Demographic Information <br>
    <br>

    ClientID <br />
    <input type="text" name="ClientID" value="wg4237"> <!-- this will be randomly generated in the SQL database, pusedocode is on client.cs-->
    <br />

    Name <br />
    <input type="text" name="Name" value="John Smith">
    <br />
    <br>

    Caregiver <br>
    <input type="radio" name="gender" value="Mother"> Mother<br>
    <input type="radio" name="gender" value="Father"> Father<br>
    <input type="radio" name="gender" value="mGrandma">Maternal Grandmoter<br>
    <input type="radio" name="gender" value="mGrandpa">Maternal Grandfather <br>
    <br>
    <br>

    Caregiver Name <br>
    <input type="text" name="careName" value="Barbara Smith"> <br />
    <br>


    Gender Identity <br>
    <input type="radio" name="gender" value="male"> He/Him/His<br>
    <input type="radio" name="gender" value="female"> She/Her/Hers<br>
    <input type="radio" name="gender" value="trans*"> They/Them/Theirs<br />
    <input type="radio" name="gender" value="nonbinaryF"> She/They<br>
    <input type="radio" name="gender" value="nonbinaryM"> He/They<br>
    <input type="radio" name="gender" value="neutral"> Zie/Zir/Zirs<br />
    <br>
    <br>

    Ethnicity <br>
    <select>
        <option value="nhWhite">Non Hispanic White</option>
        <option value="hispanic">Hispanic</option>
        <option value="natAm">Native American</option>
        <option value="jewish">Jewish</option>
        <option value="black">Black</option>
        <option value="multi">Multiple Ethnicities</option>
        <option value="notListed">Ethnicity Not Listed</option>

    </select>
    <br>
    <br>

    Date of Birth <br>
    <input type="date" name="dob">
    <br>
    <br>

    School <br>
    <input type="text" name="school" value="Kernan Trail Elementary">
    <br>
    <br>

    Referral Source <br>
    <input type="text" name="referral" />
    <br />
    <br />

    Failed a Grade <br />
    <input type="radio" name="fail" value="y">Yes<br />
    <input type="radio" name="noFail" value="n" />No <br />
    <br />
    <br />
    If yes, which grade and how many times
    <input type="text" name="failedGrade" />

    Baker Acted <br />
    <input type="radio" name="baker" value="y">Yes<br />
    <input type="radio" name="noBaker" value="n" />No <br />
    <br />
    <br />

    Female-led household? <br />
    <input type="radio" name="femHouse" value="y" checked>Yes<br />
    <input type="radio" name="noFemHouse" value="n" />No <br />
    <br />
    <br />

    Domestic Violence <br />
    <input type="radio" name="domVio" value="y">Yes<br />
    <input type="radio" name="noDomVio" value="n" />No <br />
    <br />
    <br />

    Adopted <br />
    <input type="radio" name="adopted" value="y">Yes<br />
    <input type="radio" name="notAdopted" value="n" />No <br />
    <br />
    <br />

    Evicted
    <input type="radio" name="adopted" value="y">Yes<br />
    <input type="radio" name="notAdopted" value="n" />No <br />
    <br />
    <br />

    Incarcarated Parent <br />
    <input type="radio" name="adopted" value="y">Yes<br />
    <input type="radio" name="notAdopted" value="n" />No <br />
    <br />
    <br />

    Asthma
    <input type="radio" name="adopted" value="y">Yes<br />
    <input type="radio" name="notAdopted" value="n" />No <br />
    <br />
    <br />

    </div>

    <div>

        Center for Children's Rights Information
        <br />
        <br />

        Level of Service Provided <br />
        <input type="radio" name="none" value="n">None<br />
        <input type="radio" name="infoEdu" value="info" />Information/Education<br />
        <input type="radio" name="serviceAdvice" value="service">Brief Service/Advice<br />
        <input type="radio" name="full" value="full" />Full<br />
        <br />
        <br />


        Referral Date <br>
        <input type="date" name="dob">
        <br>
        <br>

        Intake Date <br>
        <input type="date" name="dob">
        <br>
        <br>

        Reason for Nonengagement <br />
        <input type="radio" name="contact" value="n">Unable to Contact<br />
        <input type="radio" name="intake" value="info" />Unable to Complete Intake<br />
        <input type="radio" name="declined" value="service">Family Declined Services<br />
        <br />
        <br />

        Case open/close status <br />
        Level of Service Provided <br />
        <input type="radio" name="Open" value="o">Open<br />
        <input type="radio" name="closed" value="c" />Closed<br />
        <input type="radio" name="nonEngageClose" value="nec">Closed due to nonengagement<br />
        <br />
        <br />






    </div>

    <div>

        School Information <br />
        <br />
        <br />


        Has an IEP/504 Plan<br />
        <input type="radio" name="emo" value="emo">Emotional/Behavioral Disability<br />
        <input type="radio" name="gifted" value="gifted" />Gifted<br />
        <input type="radio" name="intellectual" value="intell">Intellectual Disability<br />
        <input type="radio" name="language" value="lang" />Language Impairment<br />
        <input type="radio" name="otherHealth" value="otherHealth" />Other Health Impairment<br />
        <input type="radio" name="specificLearning" value="specificLearning">Specific Learning Disability<br />
        <input type="radio" name="speech" value="speech" />Speech Impairment<br />
        <input type="radio" name="other" value="other">Other <br />
        <br />
        <br />

        In Pride <br />
        <input type="radio" name="adopted" value="y">Yes<br />
        <input type="radio" name="notAdopted" value="n" />No <br />
        <br />
        <br />

        New FBA <br />
        <input type="radio" name="adopted" value="y">Yes<br />
        <input type="radio" name="notAdopted" value="n" />No <br />
        <br />
        <br />

        Addititonal Accomodations Gained <br />
        <input type="radio" name="adopted" value="y">Yes<br />
        <input type="radio" name="notAdopted" value="n" />No <br />
        <br />
        <br />

    </div>

    <div>

        Discipline <br />

        Suspeneded more than 2 (two) times<br />
        <input type="radio" name="adopted" value="y">Yes<br />
        <input type="radio" name="notAdopted" value="n" />No <br />
        <br />
        <br />

    </div>

</p>

