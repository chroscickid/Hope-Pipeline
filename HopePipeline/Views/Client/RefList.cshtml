@model IEnumerable<Client>

@{
    ViewData["Title"] = "RefList";
}

<h2>RefList</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caregiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Caregiver)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoB)
                </td>
                <td>
                    <a asp-controller="Client" asp-action="StartTracking">Start Tracking</a> |
                    <a asp-controller="Client" asp-action="ViewMoreInfo">View or Edit Referral</a> |
                    <a asp-controller="Client" asp-action="Delete" asp-route-clientID="@item.ClientID">Delete the referral</a>
                </td>
            </tr>
        }
    </tbody>
</table>