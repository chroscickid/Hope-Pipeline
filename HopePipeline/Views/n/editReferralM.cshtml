@model HopePipeline.Models.referralBrandi;
@{
    ViewData["Title"] = "editReferralM";
}







<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        table#t01 tr:nth-child(even) {
            background-color: #e6f3ff;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #fff;
        }

        table#t01 th {
            background-color: #005199;
            color: white;
        }
        /* Style width of form */
        .t {
            width: 30%;
            table-layout: fixed;
        }
    </style>
    <script>
        function editConfirm() {

            var r = confirm("Please Confirm you would like to Submit your changes")
            if (r == true) {

                window.location.href = "detailReferralM";
                return true;
            }
            else
                return false;
        }


        function yesnoCheck() {
            if (document.getElementById('yesCheck').checked) {
                document.getElementById('ifYes').style.display = 'block';
            }
            else document.getElementById('ifYes').style.display = 'none';

        }
        function yesnoCheck1() {
            if (document.getElementById('yesclick').checked) {
                document.getElementById('Yes').style.display = 'block';
            }
            else document.getElementById('Yes').style.display = 'none';

        }



    </script>


</head>
<body>


    <!-- Decision after login by authorized user -->

    <h1>Edit Client Referral Information</h1>



    <!-- register should only be provided by authorized personal so not for any user till logged in and authorized user will have to register new users
    1.1 Login Page -->

    <div>
        <form>
            <table id="t01">
                <tr>
                    <td class="t" style="text-align:right"> First Name:</td>

                    <td> <input type="text" value="Bryan" asp-for="fName"></td>

                </tr>
                <tr>
                    <td class="t" style="text-align:right"> Last Name: </td>

                    <td><input type="text" value="Brice" asp-for="lName"></td>

                </tr>


                <tr>
                    <td class="t" style="text-align:right"> Gender Identity:  </td>

                    <td>
                        <input type="radio" name="gender" value="male" asp-for="gender"> He/Him/His<br>
                        <input type="radio" name="gender" value="female" asp-for="gender"> She/Her/Hers<br>
                        <input type="radio" name="gender" value="trans*" asp-for="gender"> They/Them/Theirs<br />
                        <input type="radio" name="gender" value="nonbinaryF" asp-for="gender"> She/They<br>
                        <input type="radio" name="gender" value="nonbinaryM" asp-for="gender"> He/They<br>
                        <input type="radio" name="gender" value="neutral" asp-for="gender"> Zie/Zir/Zirs<br />
                    </td>

                </tr>


                <tr>
                    <td class="t" style="text-align:right"> Date of Birth:</td>

                    <td> <input type="date" value="2008-12-31" asp-for="dOB"></td>

                </tr>
                <tr>
                    <td class="t" style="text-align:right">   Guardian's Name:</td>

                    <td><input type="text" value="Victoria" asp-for="guardianName"></td>

                </tr>
                <tr>
                    <td class="t" style="text-align:right">  Guardian's relationship to the youth:</td>

