
@{
    ViewData["Title"] = "formReferralM";
}






<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        table#t01 tr:nth-child(even) {
            background-color: #e6f3ff;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #fff;
        }

        table#t01 th {
            background-color: #005199;
            color: white;
        }
    </style>
    <script type="text/javascript">

        function yesnoCheck() {
            if (document.getElementById('yesCheck').checked) {
                document.getElementById('ifYes').style.display= 'block';
            }
            else document.getElementById('ifYes').style.display = 'none';

        }
        function yesnoCheck1() {
            if (document.getElementById('yesclick').checked) {
                document.getElementById('Yes').style.display= 'block';
            }
            else document.getElementById('Yes').style.display = 'none';

        }
          function myConfirm() {

            var r = confirm("Please Confirm you would like to submit the Referral Form")
              if (r == true) {

                  window.location.href = "confirmationM";
                  return true;
              }
            else
                return false;
        }
    </script>
</head>
<body>


    <!-- Decision after login by authorized user -->

    <h1>Hope Pipeline Referral Form</h1>



    <!-- register should only be provided by authorized personal so not for any user till logged in and authorized user will have to register new users
    1.1 Login Page -->

    <p></p>
    <table id="t01">

        <tr>
            <th colspan="2">Referral for Educational Advocacy</th>
        </tr>
        <tr>
            <td>
                Referral Source's First Name:<br /> 
               <input type="text"><br>
            </td>
            <td>
                Referral Source's Last Name:<br />
                <input type="text"><br>
            </td>
        </tr>
        <tr >
            <td colspan="2">
               Referral Source's Email Address:<br />
                <input type="email"><br>
            </td>
        </tr>
    </table>
    <table id="t01">
        <tr>
            <th colspan="4">Youth and Family Basic Information</th>
        </tr>
        <tr>
            <td>
                First Name:<br />
                <input type="text"><br>
            </td>

            <td>
                Last Name:<br />
                <input type="text"><br>
            </td>
            <td>

                Gender Identity: <br />

                <input type="radio" name="gender" value="male"> He/Him/His<br>
                <input type="radio" name="gender" value="female"> She/Her/Hers<br>
                <input type="radio" name="gender" value="trans*" checked> They/Them/Theirs<br />
                <input type="radio" name="gender" value="nonbinaryF"> She/They<br>
                <input type="radio" name="gender" value="nonbinaryM"> He/They<br>
                <input type="radio" name="gender" value="neutral"> Zie/Zir/Zirs<br />

            </td>
            <td>
                Date Of Birth:<br />
                <input type="date">
            </td>
        </tr>

        <tr>
            <!-- is their a reason you don't ask for first and last name???? -->
            <td>
                Primary Caretaker's Name:<br />
                <input type="text">
            </td>

            <td colspan="2">
                What is the primary caretaker's relationship to the youth? (please select all that apply)

                <br>  <input type="checkbox" name="Mother" value="Mother"> &nbsp;Mother<br>
                <input type="checkbox" name="Father" value=" Father"> &nbsp;Father<br>
                <input type="checkbox" name="Guardian" value="Guardian"> &nbsp;Guardian<br>
                <input type="checkbox" name="Familymember" value="Family member"> &nbsp;Family member(aunt, uncle, grandmother, grandfather, great grandparent, sibiling, cousin, etc)<br>
                <input type="checkbox" name="FosterParent" value="Foster Parent"> &nbsp;Foster Parent<br>

                &nbsp;Other: &nbsp;<input type="text" name="VariableFM">
                <br>
            </td>


            <td>
                Street Address:<br />
                <input type="text">
                <br><br>
                Zip Code:<br />
                <input type="text">
            </td>
        </tr>

        <tr>
            <td colspan="2">
                Parent/Guardian's email address:<br />
                <input type="email">


            </td>

            <td colspan="2">
                Parent/Guardian phone number:<br />
                <input type="text">
            </td>
        </tr>
        <tr>
            <td colspan="4">


                Does the youth have any upcoming meetings scheduled with their school?<br />
                Yes <input type="radio" onclick="javascript:yesnoCheck();" name="Meeting" id="yesCheck">&nbsp;&nbsp;
                No <input type="radio" onclick="javascript:yesnoCheck();" name="Meeting" id="noCheck">&nbsp;&nbsp;
                Maybe <input type="radio" onclick="javascript:yesnoCheck();" name="Meeting" id="nooCheck"><br>



                <div id="ifYes" style="display:none">
                    If yes, what is the date and time of the meeting?<br>
                    Date:<br />
                    <input type="date"><br>

                    Time:<br />
                    <input type="time" name="meetingtime">
                </div>

            </td>
        </tr>
    </table>
    <table id="t01">

        <tr>
            <th colspan="2">Youth Needs</th>
        </tr>

        <tr>
            <td>
                What issues are currently impacting the youth? Please check all that apply.
                <br>  <input type="checkbox" name="Failed" value="Failed a grade"> &nbsp;Failed a grade<br>
                <input type="checkbox" name="Suspended" value="Frequently suspendeds"> &nbsp;Frequently suspended<br>
                <input type="checkbox" name="Alt" value="In an alternative school setting "> &nbsp;In an alternative school setting (Mattie V., Grand Park, AMI, Pace, etc)<br>
                <input type="checkbox" name="Plan" value="Has a 504 plan or an IEP"> &nbsp;Has a 504 plan or an IEP<br>
                <input type="checkbox" name="Notenrolled" value="Not enrolled in school"> &nbsp;Not enrolled in school<br>
                <input type="checkbox" name="Hxbaker" value="Has a history of being Baker Acted"> &nbsp;Has a history of being Baker Acted<br>
                <input type="checkbox" name="Dependent" value="Dependent"> &nbsp;Dependent<br>
                <input type="checkbox" name="WINS" value="WINS"> &nbsp;WINS<br>
            </td>

            <td>
                Is this youth a student in a Duval County Public School? <br />
                <select name="School">
                    <option value="Select">Please Select an Option</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                    <option value="Maybe">Maybe</option>

                </select><br>
            </td>
        </tr>
        <tr>
            <td>
                What is the youth's grade in school?
                <br />
                <select name="Grade">
                    <option value="Select">Please Select an Option</option>
                    <option value="1st">1st</option>
                    <option value="2nd">2nd</option>
                    <option value="3rd">3rd</option>
                    <option value="4th">4th</option>
                    <option value="5th">5th</option>
                    <option value="6th">6th</option>
                    <option value="7th">7th</option>
                    <option value="8th">8th</option>
                    <option value="9th">9th</option>
                    <option value="10th">10th</option>
                    <option value="11th">11th</option>
                    <option value="12th">12th</option>


                </select><br>
            </td>
            <td>
                Is the youth currently attending school?<br />
                Yes <input type="radio" onclick="javascript:yesnoCheck1();" name="attend" id="yesclick">&nbsp;&nbsp;
                No <input type="radio" onclick="javascript:yesnoCheck1();" name="attend" id="noclick">&nbsp;&nbsp;
                Maybe <input type="radio" onclick="javascript:yesnoCheck1();" name="attend" id="nooclick"><br>

                <div id="Yes" style="display:none">
                    <br />Where is the youth currently attending school?<br />
                    <input type="text">
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                Has the youth been arrested?<br />
                Yes <input type="radio"  name="arrest" >&nbsp;&nbsp;
                No <input type="radio" name="arrest" >&nbsp;&nbsp;
                Maybe <input type="radio"  name="arrest" ><br>
            </td>
        </tr>
    </table>
    <table id="t01">

        <tr>
            <th>You tell us.</th>
        </tr>

        <tr>
            <td>
                Is there anything else you would like us to know about the youth or their family?<br />
                ​<textarea id="txtArea" rows="5" cols="150" name="moreInfo"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                Reason for Referral?<br />
                ​<textarea id="txtArea" rows="5" cols="150" name="reason"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                What is the best way to communicate with the youth/family?

                <br /> <input type="radio" name="Reach" value="Phone"> &nbsp;Phone<br />
                <input type="radio" name="Reach" value="Email"> &nbsp;Email<br />
                <input type="radio" name="Reach" value="Text"> &nbsp;Text<br />



                <input type="radio" name="1">  &nbsp;Other: &nbsp;<input type="text" name="Reach"><br>
            </td>
        </tr>
        <tr>
            <td>
                <h4>Please upload any assessments, evaluations or additional documents you feel are important for us to have related to advocacy for this youth.</h4>
                Select files:  <input type="file" multiple />  <a asp-controller="" asp-action="">Delete</a><br />
            </td>
        </tr>

    </table><br />


    <button type="submit" onclick="myConfirm()" >Submit</button>


</body>
</html>
